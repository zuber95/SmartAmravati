<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ash.smartamravati.activity.DeathRegistration">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Registration Details"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/firstName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:hint="Father Name"
                android:textSize="25sp" />

            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:hint="Mother Name"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"
                android:hint="Gender"

                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="200dp"
                android:hint="Date of Birth"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="250dp"
                android:hint="Death Address"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="300dp"
                android:hint="Death Place"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="350dp"
                android:hint="Deceased"
                android:textSize="25sp" />

            <Button
                android:id="@+id/Next"
                android:layout_width="253dp"
                android:layout_height="55dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="420dp"
                android:background="@color/colorPrimary"
                android:text="Next"
                android:textSize="25sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
